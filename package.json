{
	"name": "tcoder",
	"version": "0.0.0",
	"private": true,
	"workspaces": ["fly"],
	"scripts": {
		"dev": "bun run scripts/dev-runner.ts",
		"fly-worker:build": "docker-compose build fly-worker",
		"fly-worker:run": "docker-compose run --rm fly-worker",
		"deploy": "wrangler deploy",
		"start": "wrangler dev",
		"test": "vitest",
		"cf-typegen": "wrangler types",
		"format": "biome format .",
		"format:check": "biome format .",
		"format:write": "biome format --write .",
		"lint": "biome lint .",
		"lint:fix": "biome lint --write .",
		"check": "biome check .",
		"check:fix": "biome check --write .",
		"knip": "knip --exclude exports,types",
		"knip:fix": "knip --fix",
		"knip:all": "knip",
		"validate": "bun run format:check && bun run lint && bun run knip",
		"fix:all": "bun run format:write && bun run lint:fix && bun run knip:fix",
		"fly:first-launch": "cd fly && bun run first-launch",
		"fly:deploy": "cd fly && bun run deploy",
		"fly:logs": "cd fly && bun run logs",
		"fly:secrets:set": "cd fly && fly secrets set",
		"fly:secrets:list": "cd fly && fly secrets list",
		"secrets:set": "wrangler secret put",
		"secrets:list": "wrangler secret list",
		"secrets:setup": "echo 'Run: wrangler secret put UPSTASH_REDIS_REST_URL && wrangler secret put UPSTASH_REDIS_REST_TOKEN && wrangler secret put FLY_API_TOKEN'"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"@cloudflare/vitest-pool-workers": "^0.8.71",
		"knip": "^5.77.1",
		"typescript": "^5.9.3",
		"vitest": "~3.2.4",
		"wrangler": "^4.56.0"
	},
	"dependencies": {
		"@aws-sdk/client-s3": "^3.958.0",
		"@aws-sdk/s3-request-presigner": "^3.958.0",
		"@hono/zod-validator": "^0.5.0",
		"@types/node": "^25.0.3",
		"@upstash/redis": "^1.36.0",
		"effect": "^3.19.13",
		"hono": "^4.11.2",
		"zod": "^3.25.76"
	}
}
